<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
{{#if vehicles}}
<p>Here are your vehicles</p>
<table class="striped">
    <thead>
        <tr>
            <th>Year</th>
            <th>Make</th>
            <th>Model</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each vehicles}}
        <tr>
            <td><a href="/vehicles/{{_id}}">{{year}}</a></td>
            <td>{{make}}</td>
            <td><span class="dash-status">{{model}}</span></td>
            <td>
                <a href="/vehicles/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/vehicles/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not saved any vehicles, please add your vehicle below</p>
{{/if}}